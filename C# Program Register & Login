using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using Npgsql;

namespace kafekasir
{
    class Program
    {
        static Dictionary<string, string> pengguna = new Dictionary<string, string>(); // Menampung data username dan password
        static string connectionString = "Host=localhost;Username=postgres;Password=22122004;Database=PBO"; // Replace with your connection string
        static NpgsqlConnection connection = new NpgsqlConnection(connectionString);
        static void Main(string[] args)
        {
            while (true)
            {
                Console.WriteLine("Menu:");
                Console.WriteLine("1. Registrasi");
                Console.WriteLine("2. Login");
                Console.WriteLine("3. Keluar");
                Console.Write("Pilih: ");

                int pilihan = int.Parse(Console.ReadLine());

                if (pilihan == 1)
                {
                    Registrasi();
                }
                else if (pilihan == 2)
                {
                    Login();
                }
                else if (pilihan == 3)
                {
                    break;
                }
                else
                {
                    Console.WriteLine("Pilihan tidak valid!");
                }
            }
        }

        static void Registrasi()
        {



            Console.Write("Masukkan username: ");
            string username = Console.ReadLine();

            Console.Write("Masukkan password: ");
            string password = Console.ReadLine();

            if (pengguna.ContainsKey(username))
            {
                Console.WriteLine("Username sudah ada!");
                return;
            }

            pengguna.Add(username, password);
            Console.WriteLine("Registrasi berhasil!");

            connection.Open(); // Open connection to database

            string sql = "INSERT INTO pegawai (username, password) VALUES (@username, @password)";
            NpgsqlCommand command = new NpgsqlCommand(sql, connection); // Replace with NpgsqlCommand
            command.Parameters.AddWithValue("@username", username);
            command.Parameters.AddWithValue("@password", password);

            command.ExecuteNonQuery(); // Execute INSERT query

            connection.Close(); // Close connection to database

            Console.WriteLine("Registration successful!");
        }

        static void Login()
        {
            Console.Write("Masukkan username: ");
            string username = Console.ReadLine();

            Console.Write("Masukkan password: ");
            string password = Console.ReadLine();

            if (!pengguna.ContainsKey(username))
            {
                Console.WriteLine("Username tidak ditemukan!");
                return;
            }

            if (pengguna[username] != password)
            {
                Console.WriteLine("Password salah!");
                return;
            }

            Console.WriteLine("Login berhasil!");
        }
    
    }
}
